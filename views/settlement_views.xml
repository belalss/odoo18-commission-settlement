<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_x_commission_settlement_tree" model="ir.ui.view">
        <field name="name">x_commission_settlement.tree</field>
        <field name="model">x_commission_settlement</field>
        <field name="arch" type="xml">
            <list>
    <field name="name"/>
</list>
        </field>
    </record>

    <record id="view_x_commission_settlement_form" model="ir.ui.view">
        <field name="name">x_commission_settlement.form</field>
        <field name="model">x_commission_settlement</field>
        <field name="arch" type="xml">
           <form>
    <sheet>
        <group>
            <field name="name"/>
            <field name="company_id"/>
        </group>
        <group>
            <field name="date_from"/>
            <field name="date_to"/>
            <field name="total_commission" readonly="1"/>
        </group>

        <notebook>
            <page string="Lines">
                <field name="line_ids">
                    <list>
                        <field name="agent_id"/>
                        <field name="invoice_id"/>
                        <field name="commission_amount"/>
                    </list>
                </field>
            </page>
        </notebook>

    </sheet>
</form>
        </field>
    </record>

    <record id="action_x_commission_settlement" model="ir.actions.act_window">
        <field name="name">Settlements</field>
        <field name="res_model">x_commission_settlement</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>